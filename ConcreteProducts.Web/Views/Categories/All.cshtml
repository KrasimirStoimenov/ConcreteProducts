@model IEnumerable<CategoryListingModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container">
    <div class="row">
        <h2 class="headingMargin text-center offset-md-3 col-md-6">@ViewData["Title"]</h2>
        <table class="table table-hover offset-md-1 col-md-10">
            <thead>
                <tr>
                    <th class="col-1 text-center" scope="col">#</th>
                    <th class="col-3 text-center" scope="col">Category name</th>
                    <th class="col-3 text-center" scope="col">Products in category</th>
                    <th class="col-3 text-center" scope="col">Add/Update/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                <tr>
                    <th scope="row" class="text-center">@category.Id</th>
                    <td class="text-center">@category.Name</td>
                    <td class="text-center">@category.ProductsCount</td>
                    <td class="text-center"></td>
                </tr>
                }
            </tbody>
        </table>
            <a class="btn btn-success text-center offset-md-3 col-md-6" title="Add new" asp-area="" asp-controller="Categories" asp-action="Add"><i class="fas fa-plus"></i> Add new</a>
    </div>
</div>


