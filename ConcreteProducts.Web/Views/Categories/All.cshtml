@model IEnumerable<CategoryListingViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container">
    <div class="row">
        <h2 class="headingMargin text-center offset-md-3 col-md-6 col-sm-12">@ViewData["Title"]</h2>
        <table class="table table-hover offset-md-1 col-md-10">
            <thead>
                <tr>
                    <th class="col-1 text-center" scope="col">#</th>
                    <th class="col-3 text-center" scope="col">Category name</th>
                    <th class="col-3 text-center" scope="col">Products in category</th>
                    <th class="col-3 text-center" scope="col"><i class="fas fa-edit"></i> Edit/ <i class="fas fa-times"></i> Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row" class="text-center">@category.Id</th>
                        <td class="text-center">@category.Name</td>
                        <td class="text-center">@category.ProductsCount</td>
                        <td class="text-center">
                            <div class="input-group-append">
                                <a class="btn btn-info offset-3 col-3 text-center" title="Edit" asp-area="" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger offset-3 col-3 text-center" title="Delete" asp-area="" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-x-lg"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-success text-center offset-md-3 col-md-6 col-sm-12" title="Add new" asp-area="" asp-controller="Categories" asp-action="Add"><i class="bi bi-plus-circle"></i> Add new</a>
    </div>
</div>


