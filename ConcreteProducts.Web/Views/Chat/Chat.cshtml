@{
    ViewBag.Title = "Chat Room";
}

<h2 class="headingMargin text-center">@ViewBag.Title</h2>
<div class="container">
    <div id="message-holder" class="mt-3 d-flex justify-content-start">
        <h2>Message</h2>
        <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
        <button id="sendButton" class="ml-4 btn btn-info btn-lg">Send</button>
    </div>
    <hr style="height: 5px;" class="bg-info" />
    <div id="messagesList" style="font-size: 28px;">
    </div>
</div>

@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
}