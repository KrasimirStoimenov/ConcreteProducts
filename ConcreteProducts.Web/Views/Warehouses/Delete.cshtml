@model WarehouseWithProductsAndShapesCount

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h1 class="headingMargin">Delete</h1>

@if (Model.TotalProductsCount > 0 || Model.TotalShapesCount > 0)
{
    <h5>You can not delete warehouse with related products or shapes to the warehouse!</h5>
    <h5>Related products - @Model.TotalProductsCount</h5>
    <h5>Related shapes - @Model.TotalShapesCount</h5>
    <br />
}
else
{
    <h5>Are you sure you want to delete <span class="font-weight-bold"><u>@Model.Name</u></span> warehouse?</h5>
    <br />
}
<div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="@Model.Id" />
        <input @if (Model.TotalProductsCount > 0 || Model.TotalShapesCount > 0) { <text>disabled</text>} type="submit" asp-action="DeleteConfirmed" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="All">Back to List</a>
    </form>
</div>

