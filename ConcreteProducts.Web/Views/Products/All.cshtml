@model ListAllProductsViewModel

@{
    ViewData["Title"] = "All Products";
}

<h2 class="headingMargin text-center">@ViewData["Title"]</h2>
<div class="row">
    @foreach (var product in Model.AllProducts)
    {
        <div class="card mb-3 ml-2" style="width: 17rem;">
            <img class="card-img-top" height="200" src="@product.DefaultImageUrl" alt="@product.Name">
            <div class="card-body">
                <br />
                <h4 class="card-title text-center"><br />@product.Name</h4>
                <hr />
                <h6 class="text-center">Specifiations:</h6>
                <div class="text-center"><br />Size - @product.Dimensions</div>
                <div class="text-center"><br />In Pallet - @product.InPallet</div>
                <div class="text-center"><br />Available in different colors</div>
                <br />
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary" style="width: 14rem;">Details</a>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@this.Model" />

