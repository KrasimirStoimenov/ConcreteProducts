@model AddColorToProductFormModel

@{
    ViewBag.Title = "Add color to product";
}


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h2 class="headingMargin text-center">@ViewBag.Title</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="ColorId"></label>
                    <div class="input-group">
                        <select asp-for="ColorId" class="form-control">
                            @foreach (var color in Model.Colors)
                            {
                                <option value="@color.Id">@color.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <button class="btn btn-info" type="submit" asp-area="Admin" asp-controller="ProductColors" asp-action="Add" asp-route-productId="@Model.ProductId">Save</button>
                <a class="btn btn-info" asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId">Back to List</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}